<!-- Search For available Buses page -->
<div id="searchLoc" class="container">
    <div class="center">
        {{#if error_msg}}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{error_msg}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {{/if}}
        {{#if success_msg}}
            <div class="text-center alert alert-success alert-dismissible fade show" role="alert">
                {{success_msg}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {{/if}}
        <form action="/buses" method="post">
            <div class="autocomplete" style="width:100%;">
                <input class="form-control" id="departure" type="text" required name="departure"
                       placeholder="Departure Location"><br/>
            </div>
            <div class="autocomplete" style="width:100%;">
                <input class="form-control" id="destination" type="text" required name="destination"
                       placeholder="Destination Location"><br/>
            </div>
            <label for="departure">Departure Time:</label>
            <input class="form-control" type="time" name="depart" id="" required placeholder="Time of Departure"><br/>
            <button class=" btn btn-primary btn-lg form-control" data-switch="/buses">Search</button>
        </form>
    </div>
</div>
<script src="./js/index.js"></script>

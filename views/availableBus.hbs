<!-- Available Buses Page -->
<div id="availableBus" xmlns="http://www.w3.org/1999/html">
    <div class="container">
        {{#if error_msg}}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{error_msg}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {{/if}}
        <br/>
        <div class="row">
            <div class="col" style="background-color: #fff;
              border: 1px solid #c3c3c3; align-content: center;">
                <div>
                    <img src="./images/buses.jpeg" alt="" width="100%" srcset="">
                </div>
            </div>
            <div class="col" style="background-color: #fff;
              border: 1px solid #c3c3c3; align-content: center;">
                <div>
                    <img src="./images/buses.jpeg" alt="" width="100%" srcset="">
                </div>
            </div>
        </div>
        <div class="row" style="background-color: #fff; align-content: center;">
            <br/>
            <br/>
            Location: {{route.departure}}
            <br/>
            <br/>
            Destination: {{route.destination}}
            <br/>
            <br/>
            Time of Departure: {{route.depart}}
            <br/>
            <br/>
            <button type="button" class="btn btn-primary btn-lg form-control" data-toggle="modal"
                    data-target="#exampleModal" data-whatever="@mdo"
                    style="text-decoration: none; cursor: pointer; opacity: .75;">Book A Seat
            </button>
        </div>
    </div>
</div>
<!-- ==============================-->
<!-- Available Buses Page ENDS HERE-->

<!-- Modal Section  -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Available Seats</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/payment" method="post">
                    <div class="row">
                        {{#each availableBus}}
                            {{#each this.availableSeats}}
                                <div class="col-2" style="padding-bottom: 20px;">
                                    {{#if this.isAvailable}}
                                        {{this.seatNo}}
                                        <input type="checkbox" name={{this.plateNo}} value={{this.seatNo}} >
                                    {{/if}}
                                </div>
                            {{/each}}
                        {{/each}}
                    </div>
                    <button type="submit" class=" btn btn-primary btn-lg form-control" data-switch="#payment"
                            style="text-decoration: none; cursor: pointer; opacity: .75;">Pay
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>